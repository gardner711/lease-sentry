# Environment Configuration for Lease Sentry Web Service - Production
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Azure Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-db.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-key
COSMOS_DB_DATABASE=lease-sentry

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER=contracts

# Azure Event Grid Configuration
EVENT_GRID_ENDPOINT=https://your-eventgrid.westus-1.eventgrid.azure.net/api/events
EVENT_GRID_KEY=your-eventgrid-key

# Azure Cognitive Search Configuration
SEARCH_ENDPOINT=https://your-search.search.windows.net
SEARCH_KEY=your-search-key
SEARCH_INDEX=contracts

# JWT Configuration (use Azure AD in production)
JWT_SECRET=your-production-jwt-secret-key
JWT_ISSUER=https://login.microsoftonline.com/your-tenant-id/v2.0
JWT_AUDIENCE=your-app-client-id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# CORS Configuration (restrict to your domain)
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting (stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Azure Application Insights (required for production monitoring)
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string