# Environment Configuration for Lease Sentry Web Service
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Azure Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-db.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-key
COSMOS_DB_DATABASE=lease-sentry

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER=contracts

# Azure Event Grid Configuration
EVENTGRID_ENDPOINT_DEV=https://your-eventgrid-dev.westus-1.eventgrid.azure.net/api/events
EVENTGRID_KEY_DEV=your-eventgrid-dev-key
EVENTGRID_ENDPOINT_TEST=https://your-eventgrid-test.westus-1.eventgrid.azure.net/api/events
EVENTGRID_KEY_TEST=your-eventgrid-test-key
EVENTGRID_ENDPOINT_PROD=https://your-eventgrid-prod.westus-1.eventgrid.azure.net/api/events
EVENTGRID_KEY_PROD=your-eventgrid-prod-key

# Dead Letter Queue Configuration
DEADLETTER_BLOB_DEV=https://yourstorageaccount.blob.core.windows.net/deadletter-dev
DEADLETTER_BLOB_TEST=https://yourstorageaccount.blob.core.windows.net/deadletter-test
DEADLETTER_BLOB_PROD=https://yourstorageaccount.blob.core.windows.net/deadletter-prod

# Azure Cognitive Search Configuration
SEARCH_ENDPOINT=https://your-search.search.windows.net
SEARCH_KEY=your-search-key
SEARCH_INDEX=contracts

# JWT Configuration (for development - use Azure AD in production)
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ISSUER=https://login.microsoftonline.com/your-tenant-id/v2.0
JWT_AUDIENCE=your-app-client-id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Azure Application Insights (optional)
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string